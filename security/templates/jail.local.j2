[DEFAULT]

# ignoreip = 127.0.0.1/8 ::1 STATIC_IP

banaction = ufw

# 30m = 30 minutes, 1h = 1 hour, 1d = 1 day
bantime  = 30m

findtime = 10m
maxretry = 5

# This ensures bans are restored after a reboot.
dbfile = /config/fail2ban/fail2ban.sqlite3

[ssh]
enabled = true
port    = {{ new_ssh_port }} 
filter  = sshd
backend = systemd
# logpath = /var/log/auth.log
maxretry = 3
bantime = 600

[sshd]
enabled = true
port    = {{ new_ssh_port }} 
filter  = sshd
backend = systemd
# logpath = /var/log/auth.log
maxretry = 3
bantime = 600
